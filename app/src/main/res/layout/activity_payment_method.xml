<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/llPaymentMode"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.appcompat.widget.Toolbar
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivBackConfirmPickUp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:onClick="goBackConfirmPickup"
                android:src="@drawable/ic_arrow_back_black_36dp" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:text="Make Payment"
                android:textColor="#000"
                android:textSize="24dp" />
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="18dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="16dp">

        <TextView
            android:textColor="@android:color/black"
            android:textSize="36sp"
            android:gravity="center"
            android:text="Buy 1, Huawei Y9 From Joel Kunari on Olx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textStyle="bold"
            android:padding="12dp"
            android:textSize="21sp"
            android:gravity="center"
            android:text="Ksh. 23,999.99"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="22dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textStyle="italic"
            android:textColor="@android:color/black"
            android:text="This product will be delivered to: Makutano Estate, House B"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:paddingTop="8dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:text="Choose payment method :"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>


    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llMpesaPayment"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:onClick="selectedPayment"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:paddingTop="8dp">

                <ImageView
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:src="@drawable/mpesa_icon" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:text="M-Pesa"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <ImageView
                    android:id="@+id/ivMpesaSelected"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:src="@drawable/ic_check_circle_black_24dp"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llAirtelPayment"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:onClick="selectedPayment"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:paddingTop="8dp">

                <ImageView
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:src="@drawable/cash_in_hand_480" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:text="Google Pay"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <ImageView
                    android:id="@+id/ivAirtelMoneySelected"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:src="@drawable/ic_check_circle_black_24dp"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llCardPayment"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:onClick="selectedPayment"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:paddingTop="8dp">

                <ImageView
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:src="@drawable/bank_card_480" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:text="Credit Card"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <ImageView
                    android:id="@+id/ivCreditCardSelected"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:src="@drawable/ic_check_circle_black_24dp"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/llCashPayment"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:onClick="selectedPayment"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:paddingTop="8dp">

                <ImageView
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:src="@drawable/cash_in_hand_480" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:text="Cash"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <ImageView
                    android:id="@+id/ivCashSelected"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:src="@drawable/ic_check_circle_black_24dp"
                    android:visibility="visible" />
            </LinearLayout>

            <Button
                android:background="@drawable/blue_curved_background"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:onClick="makePayments"
                android:text="Done"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>