<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="12dp"
    android:id="@+id/item_orders_form_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_order_form_product_name_text_view"
        android:text="Matress 10' "
        android:textSize="21sp"
        android:textColor="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_order_form_buyer_names_text_view"
            android:paddingTop="8dp"
            android:textSize="18sp"
            android:text="Joel Munia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_order_form_order_date_time"
            android:textColor="@android:color/black"
            android:layout_marginStart="12dp"
            android:text="19 Aug 2019 17:34 PM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>



</LinearLayout>