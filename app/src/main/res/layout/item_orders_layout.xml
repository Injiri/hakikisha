<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="12dp"
    android:id="@+id/item_order_parent_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/order_item_image_view"
        android:layout_alignParentStart="true"
        android:src="@drawable/jumia"
        android:layout_width="60dp"
        android:layout_height="60dp"/>

    <LinearLayout
        android:layout_toRightOf="@+id/order_item_image_view"
        android:layout_marginStart="12dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_order_title_text_view"
            android:textColor="@android:color/black"
            android:textSize="21sp"
            android:text="Jumia Kenya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/item_order_transaction_id_text_view"
            android:layout_marginTop="8dp"
            android:text="1234567890764324"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_alignParentEnd="true"
        android:layout_marginStart="12dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_order_amount_text_view"
            android:textColor="@android:color/black"
            android:layout_gravity="end"
            android:gravity="end"
            android:text="Ksh. 3,000.00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/item_order_transaction_date_text_view"
            android:layout_marginTop="12dp"
            android:layout_gravity="end"
            android:gravity="end"
            android:text="13/10/19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>