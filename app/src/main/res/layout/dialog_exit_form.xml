<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="18dp"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:text="You have unsaved changes, do you want to keep editing ?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_marginTop="16dp"
        android:layout_width="360dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/discard_form_action_view"
            android:layout_toLeftOf="@+id/keep_editiong_action_view"
            android:text="Discard"
            android:textSize="16sp"
            android:textColor="@color/blue_deep"
            android:layout_marginEnd="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginEnd="26dp"
            android:id="@+id/keep_editiong_action_view"
            android:layout_alignParentEnd="true"
            android:text="Keep editing"
            android:textSize="16sp"
            android:textColor="@color/blue_deep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>