<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_centerVertical="true"
        android:padding="12dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginBottom="18dp"
            android:textColor="@android:color/black"
            android:textSize="31sp"
            android:gravity="center"
            android:text="Begin to ensure your purchases with Hakikisha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginTop="16dp"
            android:layout_marginBottom="18dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_launcher"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <LinearLayout
            android:layout_marginTop="21dp"
            android:layout_marginBottom="21dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@android:color/black"
                android:textSize="21sp"
                android:text="+254 "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/phone_number_edit_text"
                android:paddingStart="12dp"
                android:background="@null"
                android:textSize="21sp"
                android:hint="Enter your mobile number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <Switch
            android:paddingBottom="14dp"
            android:textSize="18sp"
            android:text="Register as a seller/Supply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:layout_marginBottom="16dp"
            android:text="By continuing you accepts our terms and conditions. You may receive an SMS verification and data rates may apply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/submit_phone_view"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/submit_phone_number_text_view"
                android:layout_alignParentStart="true"
                android:text="Submit"
                android:textColor="@android:color/black"
                android:textSize="21sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_marginStart="12dp"
                android:layout_toRightOf="@+id/submit_phone_number_text_view"
                android:src="@drawable/ic_action_arrow_forward_light"
                android:layout_width="32dp"
                android:layout_height="32dp" />

        </RelativeLayout>



    </LinearLayout>

</RelativeLayout>
