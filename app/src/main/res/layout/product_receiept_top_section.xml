<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:elevation="6dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:id="@+id/payment_receipt_cancel_button"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_marginStart="12dp"
        android:id="@+id/receipt_product_receipt_exit_button"
        android:src="@drawable/ic_action_close_light"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/receipt_product_receipt_reject_button"
        android:layout_marginEnd="12dp"
        android:text="Reject"
        android:textAllCaps="false"
        android:layout_toLeftOf="@+id/receipt_product_receipt_accept_button"
        android:textColor="@android:color/white"
        android:background="@drawable/curved_edge_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/receipt_product_receipt_accept_button"
        android:layout_marginEnd="12dp"
        android:text="Accept"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:background="@drawable/deep_blue_medium_curved_background"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginStart="22dp"
        android:layout_marginTop="18dp"
        android:id="@+id/product_receipt_title"
        android:layout_below="@+id/receipt_product_receipt_accept_button"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:text="Product Receipt Form"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:id="@+id/product_receipt_progress_bar"
        android:layout_below="@+id/product_receipt_title"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>