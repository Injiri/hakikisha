<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settings_container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:titleTextColor="@color/colorPrimaryDark">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/settings_activity_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Settings"
            app:titleTextColor="@color/colorPrimaryDark" />

    </com.google.android.material.appbar.AppBarLayout>


    <LinearLayout
        android:layout_margin="12dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/settings_add_photo_image_view"
            android:src="@drawable/user_add_photo"
            android:layout_marginEnd="21dp"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/settings_profile_circle_imageview"
            android:src="@drawable/user_add_photo"
            android:layout_marginEnd="21dp"
            app:civ_border_width="1dp"
            android:visibility="gone"
            app:civ_border_color="@android:color/darker_gray"
            app:civ_circle_background_color="@android:color/darker_gray"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/setting_user_name_text_view"
                android:text=""
                android:padding="2dp"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/setting_email_text_view"
                android:textColor="@android:color/black"
                android:padding="2dp"
                android:textSize="16sp"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </LinearLayout>



</LinearLayout>