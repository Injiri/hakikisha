<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/buyer_profile_image_view"
            android:layout_marginTop="42dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/user_add_photo"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <LinearLayout
            android:paddingTop="22dp"
            android:paddingBottom="22dp"
            android:paddingStart="12dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_action_person_light"
                android:layout_width="24dp"
                android:layout_height="24dp" />

            <EditText
                android:id="@+id/buyer_first_name"
                android:textColor="@color/dark_grey"
                android:textSize="16sp"
                android:layout_marginStart="18dp"
                android:hint="First Name..."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/buyer_last_name"
                android:textColor="@color/dark_grey"
                android:textSize="16sp"
                android:layout_marginStart="18dp"
                android:hint="Last Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:paddingTop="22dp"
            android:paddingBottom="22dp"
            android:paddingStart="12dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_action_address_light"
                android:layout_width="24dp"
                android:layout_height="24dp" />

            <EditText
                android:id="@+id/buyer_address_1"
                android:textColor="@color/dark_grey"
                android:textSize="16sp"
                android:background="@null"
                android:layout_marginStart="18dp"
                android:hint="Address 1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:paddingTop="22dp"
            android:paddingBottom="22dp"
            android:paddingStart="12dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:visibility="invisible"
                android:src="@drawable/ic_action_person_light"
                android:layout_width="24dp"
                android:layout_height="24dp" />

            <EditText
                android:id="@+id/buyer_address_2"
                android:textColor="@color/dark_grey"
                android:textSize="16sp"
                android:background="@null"
                android:layout_marginStart="18dp"
                android:hint="Address 2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:paddingTop="22dp"
            android:paddingBottom="22dp"
            android:paddingStart="12dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_action_email"
                android:layout_width="24dp"
                android:layout_height="24dp" />

            <EditText
                android:id="@+id/buyer_email_edit_text"
                android:textColor="@color/dark_grey"
                android:textSize="16sp"
                android:background="@null"
                android:layout_marginStart="18dp"
                android:hint="Email...  account@email.com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/buyer_dob_view"
            android:paddingTop="22dp"
            android:paddingBottom="22dp"
            android:paddingStart="12dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_action_date_light"
                android:layout_width="24dp"
                android:layout_height="24dp" />

            <TextView
                android:id="@+id/dob_text_view"
                android:textColor="@color/dark_grey"
                android:textSize="16sp"
                android:background="@null"
                android:layout_marginStart="18dp"
                android:hint="Date of Birth...  mm-dd-yyyy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/buyer_progress_bar"
            android:visibility="gone"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/submit_buyer_profile_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/blue_curved_background"
            android:text="Submit"
            android:textColor="@android:color/white" />

    </LinearLayout>

</ScrollView>
