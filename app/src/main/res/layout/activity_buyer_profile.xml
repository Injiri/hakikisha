<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/buyer_progress_bar"
            android:visibility="gone"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:indeterminate="true"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"/>

        <RelativeLayout
            android:id="@+id/profile_image_placeholder_image_view"
            android:background="@drawable/circle_background"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="110dp"
            android:layout_height="110dp">

            <ImageView
                android:id="@+id/buyer_profile_image_view"
                android:layout_marginTop="42dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/personicon"
                android:layout_width="15dp"
                android:layout_height="15dp" />

        </RelativeLayout>



        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/buyer_profile"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="12dp"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <LinearLayout
            android:background="@drawable/text_field_background"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:padding="12dp"
            android:paddingTop="22dp"
            android:paddingBottom="22dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Your name"
                android:textColor="@android:color/darker_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/buyer_first_name"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:background="@null"
                android:text="Joel Munroe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="50dp"
            android:background="@drawable/text_field_background"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingStart="12dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Email Address"
                android:textColor="@android:color/darker_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/buyer_email_edit_text"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:background="@null"
                android:text="account@email.com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:layout_marginTop="12dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:textColor="@android:color/darker_gray"
            android:text="We'll email you a verification link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:visibility="gone"
            android:id="@+id/buyer_dob_view"
            android:paddingTop="22dp"
            android:paddingBottom="22dp"
            android:paddingStart="12dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_action_date_light"
                android:layout_width="24dp"
                android:layout_height="24dp" />

            <TextView
                android:id="@+id/dob_text_view"
                android:textColor="@color/dark_grey"
                android:textSize="16sp"
                android:background="@null"
                android:layout_marginStart="18dp"
                android:hint="Date of Birth...  mm-dd-yyyy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <Button
            android:id="@+id/submit_buyer_profile_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_gravity="end"
            android:layout_marginTop="160dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/blue_curved_background"
            android:text="Next"
            android:textColor="@android:color/white" />

    </LinearLayout>

</ScrollView>
