<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:text="Register Customer"
        android:textColor="@android:color/black"
        android:textSize="21sp" />


    <EditText
        android:id="@+id/new_checklist_name_edit_text"
        android:background="@null"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="First Name" />

    <EditText
        android:id="@+id/new_checklist_description_edit_text"
        android:background="@null"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Last Name" />


    <TextView
        android:id="@+id/due_date_text_view"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text=""
        android:visibility="gone"
        android:textSize="18sp"
        android:textColor="@android:color/black" />


    <EditText
        android:id="@+id/add_deadline_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:checked="false"
        android:background="@null"
        android:padding="12dp"
        android:hint="Phone number"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/new_checklist_cancel_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:text="Cancel"
            android:textColor="@android:color/holo_red_dark"
            android:textAllCaps="true" />

        <TextView
            android:id="@+id/new_checklist_create_label"
            android:textAllCaps="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_toLeftOf="@+id/new_checklist_cancel_label"
            android:text="Create" />

    </RelativeLayout>

</LinearLayout>