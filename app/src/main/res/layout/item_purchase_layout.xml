<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginBottom="12dp"
    android:layout_marginTop="12dp"
    android:id="@+id/task_parent_card_view"
    app:cardBackgroundColor="@android:color/holo_red_dark"
    app:cardElevation="6dp"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:padding="12dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_purchase_name_text_view"
            android:layout_marginTop="4dp"
            android:textSize="21sp"
            android:textColor="@android:color/white"
            android:text="Shoes sz 12"
            android:buttonTint="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_purchase_cost_text_view"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:text="Ksh. 12000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Status:"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:layout_marginStart="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/item_purchase_status_text_view"
                android:textColor="@android:color/white"
                android:text="Payment Pending"
                android:textSize="18sp"
                android:layout_marginStart="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

