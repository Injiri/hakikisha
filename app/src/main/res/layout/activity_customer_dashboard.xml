<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:background="@android:color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/buyer_dashboard_toolbar"
            android:background="@color/colorPrimary"
            android:theme="@style/ToolbarTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <include layout="@layout/buyer_dashboard_no_data_layout"/>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/buyer_dashboard_data_view"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginStart="12dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:padding="8dp"
                    android:src="@drawable/ic_action_no_sales_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="@android:color/black"
                    android:padding="8dp"
                    android:textSize="18sp"
                    android:text="Today's Purchases"
                    android:textAllCaps="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/purchases_recycler_view"
                android:paddingTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </LinearLayout>

    <com.wangjie.rapidfloatingactionbutton.RapidFloatingActionLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:rfal="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_buyer_dashboard_rfal"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        rfal:rfal_frame_alpha="0.7"
        rfal:rfal_frame_color="#ffffff">

        <com.wangjie.rapidfloatingactionbutton.RapidFloatingActionButton xmlns:rfab="http://schemas.android.com/apk/res-auto"
            android:id="@+id/activity_buyer_dashboard_rfab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="45dp"
            android:padding="8dp"
            rfab:rfab_color_normal="@color/colorAccent"
            rfab:rfab_color_pressed="#263238"
            rfab:rfab_drawable="@drawable/ic_arrow_add_dark"
            rfab:rfab_shadow_color="#999999"
            rfab:rfab_shadow_dx="0dp"
            rfab:rfab_shadow_dy="4dp"
            rfab:rfab_shadow_radius="7dp"
            rfab:rfab_size="normal" />

    </com.wangjie.rapidfloatingactionbutton.RapidFloatingActionLayout>


</RelativeLayout>
