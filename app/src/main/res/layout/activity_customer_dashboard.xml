<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary" />

            <RelativeLayout
                android:background="@color/colorPrimary"
                android:paddingStart="30dp"
                android:paddingBottom="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/dashboard_user_profile_image_view"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="82dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/containerhold"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>

                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/bell_white"
                    android:layout_marginBottom="82dp"
                    android:layout_marginEnd="30dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>

                <TextView
                    android:layout_centerHorizontal="true"
                    android:textColor="@android:color/white"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:textSize="22sp"
                    android:text="Hello, Bejamin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <TextView
                android:textSize="21sp"
                android:layout_margin="22dp"
                android:textColor="@android:color/black"
                android:text="Pending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/pending_transactions_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <include layout="@layout/dashboard_bottom_tabs"/>

        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_alignParentEnd="true"
            android:src="@drawable/logo"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="180dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>




</ScrollView>
